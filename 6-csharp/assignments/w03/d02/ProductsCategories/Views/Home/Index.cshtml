@model Product

<div class="columns">
    <div class="column">
        <div class="card">
            <div class="card-content has-text-centered has-text-weight-bold is-size-1">
                <p class="title">New Product</p>
                <form asp-action="CreateProduct" asp-controller="Home" method='post' class="box">
                    <div class="field">
                        <label asp-for="Name" class="label"></label>
                        <div class="control">
                            <span class="has-text-danger" asp-validation-for="Name"></span>
                            <input class="input" type="text" asp-for="Name" placeholder="eg iPhone">
                        </div>
                    </div>
                    <div class="field">
                        <label asp-for="Description" class="label"></label>
                        <span class="has-text-danger" asp-validation-for="Description"></span>
                        <textarea class="textarea" placeholder="e.g. Hello world" asp-for="Description"></textarea>
                    </div>
                    <div class="field">
                        <label asp-for="Price" class="label"></label>
                        <div class="control">
                            <span class="has-text-danger" asp-validation-for="Price"></span>
                            <input class="input" type="number" step="0.01" asp-for="Price">
                        </div>
                    </div>
                <footer class="card-footer">
                    <div class="card-footer-item">
                        <div class="control">
                            <button class="button is-success" type="submit">Create</button>
                        </div>
                    </div>
                </footer>
                </form>
            </div>
        </div>
    </div>
    <div class="column">
        <div class="box">
            <p class="title">Existing Products</p>
            <ul>
                @foreach (var item in @ViewBag.RecentProducts)
                {
                    <li>    
                        <a href="products/@item.ProductId">@item.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>