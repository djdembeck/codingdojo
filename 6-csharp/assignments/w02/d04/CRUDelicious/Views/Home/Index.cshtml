<a href="/new">Add a Dish</a>
<div class="card">
    <div class="card-content has-text-centered has-text-weight-bold is-size-1">
        <ul>
            @foreach (var item in @ViewBag.RecentDishes)
            {
                <li><a href="/@item.DishId">@item.Name</a> by @item.Chef</li>
            }
        </ul>
        <p class="subtitle">@ViewBag.Message</p>
    </div>
    <footer class="card-footer">
    </footer>
</div>